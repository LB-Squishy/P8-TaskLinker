{% extends 'base.html.twig' %}

{% block title %}
    Liste des projets - TaskLinker
{% endblock %}

{% block header_content %}
    <h1>Projets</h1>
{% endblock %}

{% block body %}
    <div id="content">
        <div id="projects-container">
            {% for projet in projets %}
                <article class="card-project">
                    <a href="{{ path('app_projet_show', {'id': projet.id}) }}">
                        <h2>{{ projet.titre }}</h2>
                    </a>
                    <div class="card-project-icons">
                        <a href="#">
                        {# <a href="{{ path('app_projet_edit', {'id': projet.id}) }}"> #}
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        <a href="#">
                        <a href="{{ path('app_projet_delete', {'id': projet.id}) }}">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </div>
                </article>
            {% endfor %}
            <article class="card-project">
                <a href="{{ path('app_projet_new') }}">
                <i class="fa-solid fa-circle-plus add-project-icon"></i>
                <h2>Ajouter un projet</h2>
                </a>
            </article>
        </div>
    </div>
{% endblock %}
